# Exemplo de configuração
PORT=3333

# Opção 1: URL completa
DATABASE_URL=postgres://user:pass@host:5432/dbname

# Opção 2: parâmetros separados (se preferir, ajuste em database.ts)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_NAME=meu_banco

# SSL (use 'true' se seu provedor exigir, como Supabase/Render)
DB_SSL=false

# JWT
JWT_SECRET=troque-por-um-segredo-forte
